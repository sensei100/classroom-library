<h1>Enter a new Book</h1>

<br>

<form method="post" action="/books">

  <label for="title">Title:</label>
  <input type="text" name="title" id="title">

  <br>
  <br>

   <label for="author_name">Author Name:</label>
   <input type="text" name="author_name" id="author_name">
  
  <br>
  <br>

  <label>Genre:</label>

  <br>
  <br>

  <input class="genres" type="checkbox" name="realistic_fiction" id="realistic_fiction">Realistic Fiction</input>
  <br>
  <input class="genres" type="checkbox" name="historical_fiction" id="historical_fiction">Historical Fiction</input>
  <br>
  <input class="genres" type="checkbox" name="science_fiction" id="science_fiction">Science Fiction</input>
  <br>
  <input class="genres" type="checkbox" name="fantasy" id="fantasy">Fantasy</input>
  <br>
  <input class="genres" type="checkbox" name="poetry" id="poetry">Poetry</input>
  <br>
  <input class="genres" type="checkbox" name="informational" id="informational">Informational</input>
  <br>
  <input class="genres" type="checkbox" name="mystery" id="mystery">Mystery</input>
  <br>
  <input class="genres" type="checkbox" name="biography" id="biography">Biography</input>
  <br>
  <input class="genres" type="checkbox" name="adventure" id="adventure">Adventure</input>

  <br>
  <br>
  <input type="submit" value="Create">

 </form>